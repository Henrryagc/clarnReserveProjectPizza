    <h1>Iniciar como Empleado</h1>
    <div class="form">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputText1">Cuenta de Usuario</label>
          <input type="text" class="form-control" id="employee-user" />
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Contrase√±a</label>
          <input type="password" class="form-control" id="employee-password" />
        </div>
      </div>
      <button
        id="log-btn"
        type="submit"
        class="btn btn-primary"
        onclick="IniciarSesion()"
      >
        Ingresar
      </button>
      <!-- Incluyendo contenido de modal -->
      <%- include('modal'); -%>
    </div>

    <!--Es importante que el jquery este cargado antes del boostraap-->    
    <script src="/javascripts/jquery-3.5.1.slim.min.js"></script>
    <script src="/javascripts/jquery-3.5.1.js"></script>
