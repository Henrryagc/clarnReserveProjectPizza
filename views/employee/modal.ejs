<!-- Button trigger modal -->
<button
  type="button"
  class="btn btn-primary"
  data-toggle="modal"
  data-target="#exampleModal"
>
  Registrar
</button>

<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title"
          id="exampleModalLabel"
          style="color: rgb(25, 66, 155);"
        >
          Crear Cuenta Empleado
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          style="
            background-color: rgba(247, 37, 37, 0.603);
            border-radius: 0.2em;
          "
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="color: black;">
        <!--Nombres-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend" style="background: chartreuse;">
                <span class="input-group-text" id="inputGroup-sizing-sm">
                  <img src="/images/icons/person-circle.svg" alt="" />
                </span>
              </div>
              <input
                id="nombres"
                placeholder="Nombres"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--Apellidos-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm"
                  >C:</span
                >
              </div>
              <input
                id="apellidos"
                placeholder="Apellidos"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--DNI-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm"
                  >C:</span
                >
              </div>
              <input
                id="dni"
                placeholder="DNI"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--Nombre Usuario-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm"
                  >C:</span
                >
              </div>
              <input
                id="nombreUsuario"
                placeholder="Nombre Usuario"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--Contraseña-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm"
                  >C:</span
                >
              </div>
              <input
                id="contrasenaUsuario"
                placeholder="**********"
                type="password"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--correo-->
        <div class="row">
          <div class="col-sm-10">
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm"
                  >C:</span
                >
              </div>
              <input
                id="correo"
                placeholder="Correo electrónico"
                type="email"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
        <button onclick="GetData()" type="button" class="btn btn-primary">
          Save changes
        </button>
      </div>
    </div>
  </div>
</div>
