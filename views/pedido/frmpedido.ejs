<div id="pedido-content">
    <div id="registrar-content2">
        <h3>Lista de Pedidos</h3>
        <div class="table-responsive-md">
          <div id="verCarrito"></div>
        </div>        
    </div>
    <div style="height: 300px;">
        <div id="sinPedidos" style="width: 400px; margin: 0 auto;">
            <div class="alert alert-info alert-dismissible fade show" style="margin-top:1em;font-size:larger;" role="alert">
                <strong style="color: #000;">Lista vacia!</strong> 
                <p style="color:#d81159;">Deberia de agregar productos al carrito...</p>
              </div>
        </div>
    </div>
</div>


<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5
          class="modal-title"
          id="exampleModalLabel"
          style="color: rgb(25, 66, 155);"
        >
          Confirmar Pedido
        </h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
          style="
            background-color: rgba(247, 37, 37, 0.603);
            border-radius: 0.2em;
          "
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div id="sinPedidos2" class="alert alert-danger" role="alert">
        <span class="alert-link">No hay pedidos por hacer...</span>
      </div>
    <div class="modal-body" style="color: black;">
        <!--Direccion antigua-->
        <div class="row">
          <div class="col-sm-10">
            <strong style="color:#218380;">Dirección antigua</strong>
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend" style="background: chartreuse;">
                <span class="input-group-text" id="inputGroup-sizing-sm">
                  <img src="/images/dir1.png"/>
                </span>
              </div>
              <input
                id="direccion_antigua"
                placeholder="Direccion"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
                disabled
              />
            </div>
          </div>
        </div>
        <!--Direccion nueva-->
        <div class="row">
          <div class="col-sm-10">
            <strong style="color:#218380;">Dirección nueva</strong>
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend" style="background: chartreuse;">
                <span class="input-group-text" id="inputGroup-sizing-sm">
                  <img src="/images/dir2.png" alt="" />
                </span>
              </div>
              <input
                id="direccion_nueva"
                placeholder="Direccion"
                type="text"
                class="form-control"
                aria-label="Sizing example input"
                aria-describedby="inputGroup-sizing-sm"
              />
            </div>
          </div>
        </div>
        <!--Metodo de pago-->
        <div class="row">
          <div class="col-sm-10">
            <strong style="color:#218380;">Método de pago</strong>
            <div class="input-group input-group-sm mb-3">
              <div class="input-group-prepend">
                <span class="input-group-text" id="inputGroup-sizing-sm">
                  <img src="/images/card.png"> </span>
              </div>          
            <select class="custom-select" id="validationServer08" required>
              <option value="">Elija una tarjeta</option>
              <option value="1">Pago Efectivo</option>
              <option value="1">BBVA</option>
              <option value="2">BCP</option>
              <option value="3">INTERBANK</option>
            </select>
            </div>
          </div>
        </div>
        <div id="verTotal"></div>
        <div id="alertaFinalizar">
          <div>
          <div style="width: 400px; margin: 0 auto;">
              <div class="alert alert-success alert-dismissible fade show" style="margin-top:1em;font-size:larger;" role="alert">
                  <strong style="color: #000;">¡Pedido!</strong> 
                  <p style="color:#d81159;">Pedido enviado exitosamente...</p>
                </div>
              </div>
            </div>
        </div>
       <!-- Tarjeta-->
       <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img src="/images/interbank.png" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/BCP.png" class="d-block w-100" alt="...">
          </div>
          <div class="carousel-item">
            <img src="/images/bbva.png" class="d-block w-100" alt="...">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>

    </div>
      <div class="modal-footer">
        <button id="cancelarPedido" onclick="CargarDeNuevo()" type="button" class="btn btn-secondary" data-dismiss="modal">
          Cancelar
        </button>
        <button id="confirmarPedido" onclick="ConfirmarPedido()" type="button" class="btn btn-success">
          Confirmar Pedido
        </button>
        <a id="Finalizar" style="color:#ffbc42;" onclick="CargarDeNuevo()" type="button" class="btn btn-danger" data-dismiss="modal">
          Finalizar
        </a>
      </div>
    </div>
  </div>
</div>
