              <div class="valid-feedback">
                Looks good!
              </div>
            </div>
            <div class="col-md-6 mb-3">
                <label for="validationServer05">Repetir Contraseña</label>
                <input type="password" class="form-control" id="validationServer05" placeholder="*******" required>
                <div class="valid-feedback">
                  Looks good!
                </div>
              </div>
        </div>
        <div class="form-row">
          <div class="col-md-6 mb-3">
            <label for="validationServer06">Celular</label>
            <input type="text" class="form-control" id="validationServer06" maxlength="9" placeholder="999999999" onkeypress='return event.charCode >= 48 && event.charCode <= 57' required>
            <div class="valid-feedback">
              Looks good!
            </div>
          </div>
      </div>
      <div class="form-row">
        <div class="col-md-6 mb-3">
          <label for="validationServer07">Dirección</label>
          <input type="text" class="form-control" id="validationServer07" placeholder="Jr. Abtao Nº 254" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
    </div>
