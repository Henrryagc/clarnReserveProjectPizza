<!DOCTYPE html>
<html>
  <head>
    <title>Administrador</title>

    <!--Estilos index admin-->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />

    <!--Estilos index admin-->
    <link rel="stylesheet" href="/stylesheets/admin/loginAdmin.css" />
  </head>

  <body>
    <!--<h1><%= title %></h1>-->
    <h1>Iniciar como Administrador</h1>
    <div class="form">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="inputText4">Nombre de Usuario</label>
          <input id="usuario" type="text" class="form-control"/>
        </div>
        <div class="form-group col-md-6">
          <label for="inputPassword4">Contraseña</label>
          <input id="contrasena" type="password" class="form-control"/>
        </div>
      </div>
      <button onclick="IniciarSesion()" id="log-btn" type="submit" class="btn btn-primary" autofocus>
        Ingresar
      </button>
      <!-- Button trigger modal -->
      <button
        id="reg-btn"
        class="btn btn-primary"
        data-toggle="modal"
        data-target="#exampleModal"        
      >
        Registrar
      </button>
    </div>

    <!-- Modal -->
    <div
      class="modal fade"
      id="exampleModal"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5
              class="modal-title"
              id="exampleModalLabel"
              style="color: rgba(18, 54, 131, 0.616);"
            >
              Crear Cuenta Administrador
            </h5>
            <button
              type="button"
              class="close"
              data-dismiss="modal"
              aria-label="Close"
              style="
                background-color: rgba(247, 37, 37, 0.603);
                border-radius: 0.2em;
              "
            >
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body" style="color: black;">
            <!--Nombres-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm">
                      <img src="/images/icons/person-circle.svg" alt="">
                    </span>
                  </div>
                  <input
                    id="nombres"
                    placeholder="Nombres"
                    type="text"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
            <!--Apellidos-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"
                      >C:</span
                    >
                  </div>
                  <input
                    id="apellidos"
                    placeholder="Apellidos"
                    type="text"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
            <!--DNI-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"
                      >C:</span
                    >
                  </div>
                  <input
                    id="dni"
                    placeholder="DNI"
                    type="text"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
            <!--Nombre Usuario-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"
                      >C:</span
                    >
                  </div>
                  <input
                    id="nombreUsuario"
                    placeholder="Nombre Usuario"
                    type="text"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
            <!--Contraseña-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"
                      >C:</span
                    >
                  </div>
                  <input
                    id="contrasenaUsuario"
                    placeholder="**********"
                    type="password"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
            <!--correo-->
            <div class="row">
              <div class="col-sm-10">
                <div class="input-group input-group-sm mb-3">
                  <div class="input-group-prepend">
                    <span class="input-group-text" id="inputGroup-sizing-sm"
                      >C:</span
                    >
                  </div>
                  <input
                    id="correo"
                    placeholder="Correo electrónico"
                    type="email"
                    class="form-control"
                    aria-label="Sizing example input"
                    aria-describedby="inputGroup-sizing-sm"
                  />
                </div>
              </div>
            </div>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-dismiss="modal"
            >
              Close
            </button>
            <button onclick="GetData()" type="button" class="btn btn-primary">
              Save changes
            </button>
          </div>
        </div>
      </div>
    </div>

    <script src="/javascripts/jquery-3.5.1.slim.min.js"></script>
    <script src="/javascripts/jquery-3.5.1.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>
    <script src="/javascripts/admin/frmadminLogin.js"></script>
  </body>
</html>
